@model Proyecto_Auditoria.Models.CaracteristicaActivo
@{
    ViewBag.Titulo = "Editar Caracteristicas de Activo";
}

<div class="row">

	<div class="col-md-12">

        @if (@ViewBag.Mensaje != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @ViewBag.Mensaje
            </div>
        }

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <div class="row margin_bottom_15">
                    
                    <div class="col-6">
                        <label asp-for="CodigoListadoCaracteristica" class="control-label">Nombre de la caracteristica</label>
                        <span class="form-control">@Model.CodigoListadoCaracteristicaNavigation.DescripcionCaracteristica</span>
                    </div>

                    <div class="col-6">
                        <label asp-for="DescripcionCaracteristica" class="control-label">Descripcion Caracteristica</label>
                        <input asp-for="DescripcionCaracteristica" class="form-control" />
                    </div> 

                    <input asp-for="CodigoCaracteristica" class="form-control" value="@Model.CodigoCaracteristica" hidden />
                    <input asp-for="CodigoActivo" class="form-control" value="@Model.CodigoActivo" hidden />
                    <input asp-for="CodigoListadoCaracteristica" class="form-control" value="@Model.CodigoListadoCaracteristica" hidden />
                    
                </div>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar Caracteristica" class="btn btn-primary" />
                <a class="btn btn-info btn-small" asp-area="" asp-controller="Caracteristicas" asp-action="Detail" asp-route-id="@Model.CodigoActivo">
                     <span>Regresar</span>
                </a>
            </div>            
        </form>

    </div>

</div>