@model Proyecto_Auditoria.Models.Auditorium

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Activo> listadoActivos = ViewData["Activo"] as List<Activo>; 
}

<h4>Editar Auditoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodigoAuditoria" />
            <div class="form-group">
                <label asp-for="CodigoActivo" class="control-label"></label>
                <select asp-for="CodigoActivo" class ="form-control">
                    @foreach (var item in listadoActivos)
                    {
                        <Option value="@item.CodigoActivo">
                            @item.Descripcion
                        </Option>
                    }
                </select>
                <span asp-validation-for="CodigoActivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Responsable" class="control-label"></label>
                <input asp-for="Responsable" class="form-control" />
                <span asp-validation-for="Responsable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Objetivo" class="control-label"></label>
                <textarea asp-for="Objetivo" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Objetivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicial" class="control-label"></label>
                <input asp-for="FechaInicial" class="form-control" />
                <span asp-validation-for="FechaInicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinal" class="control-label"></label>
                <input asp-for="FechaFinal" class="form-control" />
                <span asp-validation-for="FechaFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar Auditoria" class="btn btn-primary" />
                <a class="btn btn-info btn-small" asp-area="" asp-controller="Auditoria" asp-action="Index">
                     <span>Regresar</span>
                </a>
            </div>
        </form>
    </div>
</div>


