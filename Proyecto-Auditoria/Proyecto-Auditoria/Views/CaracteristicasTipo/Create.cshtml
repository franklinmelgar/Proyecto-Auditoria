@model Proyecto_Auditoria.Models.ListadoCaracteristicaTipoActivo
@{
    ViewBag.Titulo = "Crear nuevo tipo activo";
    TipoActivo tipo = ViewData["TipoActivo"] as TipoActivo;
    List<ListadoCaracteristicaTipoActivo> listado = ViewData["listado"] as List<ListadoCaracteristicaTipoActivo>;
}

<div class="row">

	<div class="col-md-8">

        @if (@ViewBag.Mensaje != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @ViewBag.Mensaje
            </div>
        }        

        <div class="row margin_bottom_15">

            <div class="col-6">
                <label class="control-label">Codigo Tipo de Activo</label>
                <span class="form-control">@tipo.CodigoTipoActivo</span>
            </div>

            <div class="col-6">
                <label class="control-label">Descripcion Tipo de Activo</label>
                <span class="form-control">@tipo.Descripcion</span>
            </div>

        </div>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <div class="row margin_bottom_15">

                    <div class="col-6">
                        <label asp-for="DescripcionCaracteristica" class="control-label">Descripcion Caracteristica</label>
                        <input asp-for="DescripcionCaracteristica" class="form-control" />
                    </div>                    
                </div>
                
            </div>
            <div class="form-group">
                <input asp-for="CodigoTipoActivo" class="form-control" hidden value="@tipo.CodigoTipoActivo" />
                <input type="submit" value="Crear Caracteristica" class="btn btn-primary" />
                <a class="btn btn-info btn-small" asp-area="" asp-controller="CaracteristicasTipo" asp-action="Index">
                     <span>Regresar</span>
                </a>
            </div>            
        </form>


        <div class="table-responsive-sm">
            <table class="table">
                <thead>
                    <tr>
                        <th>Codigo Caracteristica</th>
                        <th>Descripcion Caracteristica</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in listado)
                    {
                        <tr>
                            <td>@item.CodigoListadoCaracteristica</td>
                            <td>@item.DescripcionCaracteristica</td>
                        </tr>   
                    }
                        
                </tbody>
            </table>
        </div>

    </div>



</div>